2) using c # create a program to find the largest of 3 numbers

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            Program greater = new Program();
            greater.largestof3numbers(); 
        
        }
       public  void  largestof3numbers()
        {
            int a, b, c;
            Console.WriteLine("enter the value of a");
            a = int.Parse(Console.ReadLine());
            Console.WriteLine("enter the value of b");
            b = int.Parse(Console.ReadLine());
            Console.WriteLine("enter the value of c");
            c = int.Parse(Console.ReadLine());
            if(a>b && a>c)
            {
                Console.WriteLine("the largest of 3 numbers={0}", a);
            }
            else if (b> c && b > a)
            {
                Console.WriteLine("the largest of 3 numbers={0}", b);
            }
            else if (c > a && c > b)
            {
                Console.WriteLine("the largest of 3 numbers={0}", c);
            }

        }
    }
}
